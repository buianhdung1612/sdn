.startbar.d-print-none
    // start brand
    .brand
        a.logo(href=`/${pathAdmin}/dashboard`)
          span
            img.logo-sm(
              alt="logo-small" 
              src="/assets/images/logo-sm.png"
              )
          span
            img.logo-lg.logo-light(
              alt="logo-large" 
              src="/assets/images/logo-light.png"
              )
            img.logo-lg.logo-dark(
              alt="logo-large" 
              src="/assets/images/logo-dark.png"
              )
    // end brand
    // start startbar-menu
    .startbar-menu
        #startbarCollapse.startbar-collapse(data-simplebar="")
          .d-flex.align-items-start.flex-column.w-100
            // Navigation
            ul.navbar-nav.mb-auto.w-100
              //- if (permissions.includes("dashboard"))
              li.nav-item
                a.nav-link(
                  href=`/dashboard`
                  )
                  i.iconoir-home-simple.menu-icon
                  span Tổng quan
              // end nav-item
              li.nav-item
                a.nav-link(
                  aria-controls="sidebarProduct" 
                  aria-expanded="false" 
                  role="button" 
                  data-bs-toggle="collapse" 
                  href="#sidebarProduct"
                  )
                  i.iconoir-shop.menu-icon
                  span Sản phẩm
                #sidebarProduct.collapse
                  ul.nav.flex-column
                    li.nav-item
                      a.nav-link(href=`/product/create`) Tạo sản phẩm
                    // end nav-item
                    li.nav-item
                      a.nav-link(href=`/product/list`) Danh sách sản phẩm
                    // end nav-item
                    li.nav-item
                      a.nav-link(href=`/product/category`) Danh mục sản phẩm
                    // end nav-item
                    li.nav-item
                      a.nav-link(href=`/product/attribute`) Thuộc tính sản phẩm
                    // end nav-itemd
              li.nav-item
                a.nav-link(
                  aria-controls="sidebarRole" 
                  aria-expanded="false" 
                  role="button" 
                  data-bs-toggle="collapse" 
                  href="#sidebarRole"
                  )
                  i.iconoir-user-badge-check.menu-icon
                  span Nhóm quyền
                #sidebarRole.collapse
                  ul.nav.flex-column
                    li.nav-item
                      a.nav-link(href=`/role/create`) Tạo nhóm quyền
                    // end nav-item
                    li.nav-item
                      a.nav-link(href=`/role/list`) Danh sách nhóm quyền
                    // end nav-item
              li.nav-item
                a.nav-link(
                  aria-controls="sidebarAccountAdmin" 
                  aria-expanded="false" 
                  role="button" 
                  data-bs-toggle="collapse" 
                  href="#sidebarAccountAdmin"
                  )
                  i.iconoir-user-crown.menu-icon
                  span Tài khoản quản trị
                #sidebarAccountAdmin.collapse
                  ul.nav.flex-column
                    li.nav-item
                      a.nav-link(href=`/account-admin/create`) Tạo tài khoản
                    // end nav-item
                    li.nav-item
                      a.nav-link(href=`/account-admin/list`) Danh sách tài khoản
                    // end nav-item
              li.nav-item
                a.nav-link(
                  href=`/file-manager/iframe`
                  )
                  i.iconoir-page-star.menu-icon
                  span Quản lý file
        // end startbar-collapse
    // end startbar-menu
// end startbar
.startbar-overlay.d-print-none