extends ../layouts/default.pug
include ../mixins/pagination.pug
include ../mixins/form-search.pug

block main
  - const modelName = "danh mục";
  - const headers = ["STT", "Tên danh mục", "Danh mục cha", "Trạng thái", "Lượt xem", "Hành động"]

  .row
    .col-12
      .card
        .card-header
          .row.align-items-center
            .col
              h4.card-title #{pageTitle}
            // end col
            .col-auto
              a.btn.btn-primary(
                href=`/${pathAdmin}/product/category/create`
                )
                i.fa-solid.fa-plus.me-1
                | Tạo danh mục
                // end col
            // end col
          // end row
        // end card-header
        .card-body.pt-0
          .row
            .col-lg-6
              +form-search()
          .table-responsive
            table.table.table-striped.mb-0
              thead.table-light
                tr
                  each head in headers
                    th #{head}
              tbody
                each item, index in recordList
                  tr
                    td #{pagination.skip + index + 1}
                    td #{item.name}
                    td #{item.parentName}
                    td
                      if (item.status == "active")
                        span(class="badge bg-success") Hoạt động
                      else if (item.status == "inactive")
                        span(class="badge bg-danger") Tạm dừng
                    td #{item.view}
                    td.text-end
                      a(href=`/${pathAdmin}/product/category/edit/${item.id}`)
                        i.las.la-pen.text-secondary.font-16
                      a(
                        href="javascript:;"
                        button-api=`delete-${modelName}`
                        data-method="PATCH"
                        data-api=`/${pathAdmin}/product/category/delete/${item.id}`
                      )
                        i.las.la-trash-alt.text-secondary.font-16
          +pagination()
    // end col
