extends ../layouts/default.pug

block main
  style.
    /* Markdown styling */
    .markdown-content {
      line-height: 1.6;
    }
    .markdown-content h1, .markdown-content h2, .markdown-content h3, 
    .markdown-content h4, .markdown-content h5, .markdown-content h6 {
      margin-top: 1em;
      margin-bottom: 0.5em;
      font-weight: 600;
    }
    .markdown-content h1 { font-size: 1.5em; }
    .markdown-content h2 { font-size: 1.3em; }
    .markdown-content h3 { font-size: 1.1em; }
    .markdown-content p {
      margin-bottom: 0.8em;
    }
    .markdown-content ul, .markdown-content ol {
      margin-bottom: 0.8em;
      padding-left: 1.5em;
    }
    .markdown-content li {
      margin-bottom: 0.4em;
    }
    .markdown-content code {
      background-color: rgba(0, 0, 0, 0.05);
      padding: 0.2em 0.4em;
      border-radius: 3px;
      font-family: 'Courier New', monospace;
      font-size: 0.9em;
    }
    .markdown-content pre {
      background-color: rgba(0, 0, 0, 0.05);
      padding: 1em;
      border-radius: 5px;
      overflow-x: auto;
      margin-bottom: 0.8em;
    }
    .markdown-content pre code {
      background: none;
      padding: 0;
    }
    .markdown-content blockquote {
      border-left: 3px solid #007bff;
      padding-left: 1em;
      margin-left: 0;
      color: #6c757d;
      font-style: italic;
    }
    .markdown-content table {
      border-collapse: collapse;
      width: 100%;
      margin-bottom: 0.8em;
    }
    .markdown-content table th,
    .markdown-content table td {
      border: 1px solid #dee2e6;
      padding: 0.5em;
      text-align: left;
    }
    .markdown-content table th {
      background-color: #f8f9fa;
      font-weight: 600;
    }
    .markdown-content strong {
      font-weight: 600;
    }
    .markdown-content em {
      font-style: italic;
    }
    .markdown-content a {
      color: #007bff;
      text-decoration: none;
    }
    .markdown-content a:hover {
      text-decoration: underline;
    }
    /* Loading indicator */
    .typing-indicator {
      display: inline-flex;
      align-items: center;
      gap: 4px;
    }
    .typing-indicator span {
      height: 8px;
      width: 8px;
      background: #007bff;
      border-radius: 50%;
      display: inline-block;
      animation: typing 1.4s infinite;
    }
    .typing-indicator span:nth-child(2) {
      animation-delay: 0.2s;
    }
    .typing-indicator span:nth-child(3) {
      animation-delay: 0.4s;
    }
    @keyframes typing {
      0%, 60%, 100% {
        transform: translateY(0);
        opacity: 0.7;
      }
      30% {
        transform: translateY(-10px);
        opacity: 1;
      }
    }
    .loading-message {
      display: flex;
      align-items: center;
      gap: 10px;
      padding: 12px 16px;
      background: #f8f9fa;
      border-radius: 8px;
      margin-bottom: 12px;
    }
  .row
    .col-12
      .card
        .card-header
          .row.align-items-center
            .col
              h4.card-title
                i.icofont-robot.me-2
                | Chatbot AI
            .col-auto
              span.badge.bg-success-subtle.text-success
                i.icofont-check-circled.me-1
                | Đang hoạt động
        .card-body(style="height: 70vh; display: flex; flex-direction: column;")
          // Chat messages area
          #chatMessages.card-body.bg-light.rounded(style="flex: 1; overflow-y: auto; padding: 20px; margin-bottom: 20px; min-height: 400px;")
            .text-center.text-muted.py-5
              i.icofont-robot.fs-1.mb-3
              p.mb-0 Xin chào! Tôi là AI Chatbot của hệ thống.
              p.mb-0 Tôi có thể giúp bạn:
              ul.list-unstyled.mt-2
                li ✓ Tìm hiểu về hệ thống
                li ✓ Truy vấn dữ liệu (tồn kho, phân bổ, đơn hàng...)
                li ✓ Dự báo nhu cầu sản xuất & phân phối
                li ✓ Phân tích và đưa ra khuyến nghị
          
          // Input area
          .d-flex.align-items-end.gap-2
            .flex-grow-1
              textarea.form-control#messageInput(
                rows="3"
                placeholder="Nhập câu hỏi của bạn... (Ví dụ: Tổng tồn kho toàn hệ thống là bao nhiêu? Dự báo nhu cầu sản xuất trong tháng tới?)"
                style="resize: none;"
              )
            .flex-shrink-0
              button.btn.btn-primary.btn-lg#sendButton(type="button", style="height: fit-content;")
                i.icofont-send.me-2
                | Gửi

block script
  // Markdown parser library
  script(src="https://cdn.jsdelivr.net/npm/marked@11.1.1/marked.min.js")
  script.
    (function() {
      const chatMessages = document.getElementById('chatMessages');
      const messageInput = document.getElementById('messageInput');
      const sendButton = document.getElementById('sendButton');
      
      if (!chatMessages || !messageInput || !sendButton) {
        console.error('Không tìm thấy các element cần thiết!');
        return;
      }
      
      let conversationId = `conv_${Date.now()}`;
      let loadingMessageElement = null;

      // Render markdown to HTML
      function renderMarkdown(markdownText) {
        if (typeof marked === 'undefined') {
          return markdownText.replace(/\n/g, '<br>');
        }
        
        try {
          marked.setOptions({
            breaks: true,
            gfm: true,
            headerIds: false,
            mangle: false
          });
          return marked.parse(markdownText);
        } catch (error) {
          console.error('Markdown parsing error:', error);
          return markdownText.replace(/\n/g, '<br>');
        }
      }

      // Show loading indicator
      function showLoading() {
        const welcomeMsg = chatMessages.querySelector('.text-center.text-muted');
        if (welcomeMsg) {
          welcomeMsg.remove();
        }

        const loadingDiv = document.createElement('div');
        loadingDiv.className = 'mb-3';
        loadingDiv.id = 'loadingMessage';
        
        const loadingCard = document.createElement('div');
        loadingCard.className = 'd-inline-block p-3 rounded bg-white border shadow-sm';
        loadingCard.style.maxWidth = '75%';
        
        const loadingContent = document.createElement('div');
        loadingContent.className = 'loading-message';
        
        const icon = document.createElement('i');
        icon.className = 'icofont-robot me-2';
        
        const loadingText = document.createElement('span');
        loadingText.textContent = 'Đang suy nghĩ';
        loadingText.className = 'me-2';
        
        const typingIndicator = document.createElement('div');
        typingIndicator.className = 'typing-indicator';
        typingIndicator.innerHTML = '<span></span><span></span><span></span>';
        
        loadingContent.appendChild(icon);
        loadingContent.appendChild(loadingText);
        loadingContent.appendChild(typingIndicator);
        loadingCard.appendChild(loadingContent);
        loadingDiv.appendChild(loadingCard);
        
        chatMessages.appendChild(loadingDiv);
        loadingMessageElement = loadingDiv;
        chatMessages.scrollTop = chatMessages.scrollHeight;
      }

      // Hide loading indicator
      function hideLoading() {
        if (loadingMessageElement) {
          loadingMessageElement.remove();
          loadingMessageElement = null;
        }
      }

      function addMessage(content, isUser) {
        isUser = isUser || false;
        const messageDiv = document.createElement('div');
        messageDiv.className = 'mb-3 ' + (isUser ? 'text-end' : '');
        
        const messageCard = document.createElement('div');
        messageCard.className = 'd-inline-block p-3 rounded ' + (isUser ? 'bg-primary text-white' : 'bg-white border') + ' shadow-sm';
        messageCard.style.maxWidth = '75%';
        messageCard.style.textAlign = isUser ? 'left' : 'left';
        
        if (!isUser) {
          const icon = document.createElement('i');
          icon.className = 'icofont-robot me-2';
          messageCard.appendChild(icon);
        }
        
        const text = document.createElement('div');
        text.className = isUser ? '' : 'markdown-content';
        text.style.wordBreak = 'break-word';
        
        if (isUser) {
          text.style.whiteSpace = 'pre-wrap';
          text.textContent = content;
        } else {
          text.innerHTML = renderMarkdown(content);
        }
        
        messageCard.appendChild(text);
        
        const time = document.createElement('small');
        time.className = 'd-block mt-2 ' + (isUser ? 'text-white-50' : 'text-muted');
        time.style.fontSize = '0.75rem';
        time.textContent = new Date().toLocaleTimeString('vi-VN');
        messageCard.appendChild(time);
        
        messageDiv.appendChild(messageCard);
        chatMessages.appendChild(messageDiv);
        chatMessages.scrollTop = chatMessages.scrollHeight;
      }

      async function sendMessage() {
        const message = messageInput.value.trim();
        if (!message) return;

        addMessage(message, true);
        messageInput.value = '';
        messageInput.style.height = 'auto';
        
        showLoading();
        sendButton.disabled = true;
        messageInput.disabled = true;

        try {
          const response = await fetch('/admin/ai-chatbot/chat', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            credentials: 'include',
            body: JSON.stringify({
              message: message,
              conversationId: conversationId
            })
          });

          const data = await response.json();
          
          if (data.success) {
            addMessage(data.data.response || 'Không có phản hồi', false);
            if (data.data.conversationId) {
              conversationId = data.data.conversationId;
            }
          } else {
            addMessage('Xin lỗi, đã có lỗi xảy ra: ' + (data.message || 'Lỗi không xác định'), false);
          }
        } catch (error) {
          console.error('Error:', error);
          addMessage('Xin lỗi, không thể kết nối đến server. Vui lòng thử lại sau.', false);
        } finally {
          hideLoading();
          sendButton.disabled = false;
          messageInput.disabled = false;
          messageInput.focus();
        }
      }

      // Auto-resize textarea
      messageInput.addEventListener('input', function() {
        this.style.height = 'auto';
        this.style.height = (this.scrollHeight) + 'px';
      });

      // Send message on Enter (Shift+Enter for new line)
      messageInput.addEventListener('keydown', function(e) {
        if (e.key === 'Enter' && !e.shiftKey) {
          e.preventDefault();
          sendMessage();
        }
      });

      // Send button click
      sendButton.addEventListener('click', sendMessage);
      
      // Đảm bảo button không bị disable
      sendButton.disabled = false;
      messageInput.disabled = false;
      messageInput.focus();
    })();

